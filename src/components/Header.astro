---
// Header navigation component
---

<header class="fixed w-full top-0 z-50 bg-white/90 backdrop-blur-md shadow-sm">
	<nav class="container mx-auto px-4 py-4">
		<div class="flex items-center justify-between">
			<!-- Logo -->
			<a href="/" class="flex items-center space-x-3">
				<img src="/Preston Speaking Club Logo - no bg.png" alt="Preston Speaking Club Logo" class="h-12 w-12" />
				<div class="text-2xl font-bold text-preston-blue">
					Preston Speaking Club
				</div>
			</a>

			<!-- Desktop Navigation -->
			<div class="hidden md:flex items-center space-x-8">
				<a href="#about" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">About Us</a>
				<a href="#meetings" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">Meetings</a>
				<a href="#membership" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">Membership</a>
				<a href="#faq" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">FAQ</a>
				<a href="#contact" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">Contact</a>
				<a
					href="https://www.eventbrite.com/e/preston-speaking-club-tickets-516074862807"
					target="_blank"
					class="bg-preston-blue text-white px-6 py-2 rounded-full hover:bg-preston-blue-700 transition-colors duration-200 shadow-md hover:shadow-lg"
				>
					Join Us
				</a>
			</div>

			<!-- Mobile Menu Button -->
			<button
				id="mobile-menu-button"
				class="md:hidden text-gray-700 hover:text-preston-blue focus:outline-none"
				aria-label="Toggle menu"
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>

		<!-- Mobile Navigation -->
		<div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
			<div class="flex flex-col space-y-4">
				<a href="#about" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">About Us</a>
				<a href="#meetings" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">Meetings</a>
				<a href="#membership" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">Membership</a>
				<a href="#faq" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">FAQ</a>
				<a href="#contact" class="text-gray-700 hover:text-preston-blue transition-colors duration-200">Contact</a>
				<a
					href="https://www.eventbrite.com/e/preston-speaking-club-tickets-516074862807"
					target="_blank"
					class="bg-preston-blue text-white px-6 py-2 rounded-full hover:bg-preston-blue-700 transition-colors duration-200 text-center"
				>
					Join Us
				</a>
			</div>
		</div>
	</nav>
</header>

<script>
	// Mobile menu toggle
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');

	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});

	// Close mobile menu when clicking on a link
	const mobileLinks = mobileMenu?.querySelectorAll('a');
	mobileLinks?.forEach(link => {
		link.addEventListener('click', () => {
			mobileMenu?.classList.add('hidden');
		});
	});

	// Smooth scroll for anchor links
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function (e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href') || '');
			if (target) {
				const headerOffset = 80;
				const elementPosition = target.getBoundingClientRect().top;
				const offsetPosition = elementPosition + window.scrollY - headerOffset;

				window.scrollTo({
					top: offsetPosition,
					behavior: 'smooth'
				});
			}
		});
	});
</script>
